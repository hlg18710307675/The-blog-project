extends ../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 分类名
                        th 更新时间
                        th 更新
                        th 删除
                tbody
                each item in categories
                    tr(class="item-id-#{item._id}")
                        td #{item.name}
                        td #{moment(item.meta.updateAt).format("DD/MM/YYYY")}
                        td: a(target="_blank",href="/admin/movie/category/update/#{item._id}") 修改
                        td
                            button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
            script(src="/js/categoryDel.js")