extends ../layout

block content
    .container
        .row
            each category in categories
                if category.movies.length > 0
                    .panel.panel-default
                            .panel-heading
                                h3
                                    a.text-info(href="/result?category=#{category._id}&page=1") #{category.name}
                            .panel-body
                                    each item in category.movies
                                        .col-md-2
                                            .thumbnail
                                                a(href="/movie/#{item._id}")
                                                    img(src="#{item.poster}",alt="#{item.title}")
                                                .caption
                                                    h3 #{item.title}
                                                    p: a.btn.btn-primary(href="/movie/#{item._id}",role = "button") 观看预告片
