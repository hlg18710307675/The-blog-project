extends ../layout

block content
    .container
        .row
            if movies.length > 0
                .panel.panel-default
                    .panel-heading
                        h3 #{title}
                    .panel-body
                        each item in movies
                            .col-md-2
                                .thumbnail
                                    a(href="/movie/#{item._id}")
                                        img(src="#{item.poster}",alt="#{item.title}")
                                    .caption
                                        h3 #{item.title}
                                        p: a.btn.btn-primary(href="/movie/#{item._id}",role = "button") 观看预告片
        nav(aria-label="Page navigation")
            ul.pagination
                - for(var i = 1 ;i <= totalPage ;i++)
                    if (i == currentPage)
                        li.active
                            span #{currentPage}
                    else
                        li
                            if(category)
                                a(href="/result?category=#{category}&page=#{i}") #{i}
                            else
                                a(href="/result?keyword=#{keyword}&page=#{i}") #{i}


